<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="top"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:text="My Activity" />

    <androidx.cardview.widget.CardView
        android:id="@+id/my_created_auctions"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:elevation="12dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCreatedAuctions"
                android:text="My Created Auctions"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_below="@+id/textViewCreatedAuctions"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/created_auctions_my_activity" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/my_won_auctions"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVictoryAuctions"
                android:text="My Winning Auctions"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="200dp"
                android:layout_below="@+id/textViewVictoryAuctions"
                app:srcCompat="@drawable/victory_my_auctioin" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>